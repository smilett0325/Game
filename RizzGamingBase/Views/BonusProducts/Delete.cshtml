@model RizzGamingBase.Models.EFModels.BonusProduct

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminBoard.cshtml";
}
}

<h3>是否刪除商品</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>類型</dt>
        <dd>@Html.DisplayFor(model => model.ProductTypeId)</dd>

        <dt>價格</dt>
        <dd>@Html.DisplayFor(model => model.Price) </dd>

        <dt>產品圖片</dt>
        <img src="@Url.Content("~/Images/BonusProducts/"+Model.ProductTypeId+"/"+Model.URL)" alt="@Model.Name" style="width: 138px; " /> @*有限制大小*@

        <dt>名稱</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
    </dl>
    <div>
        <h4>警告！刪除後無無法復原了</h4>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-danger" />
        </div>
    }
</div>
