@model IEnumerable<RizzGamingBase.Models.EFModels.Developer>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="">
        <div class="card card-yellow">
            <div class="card-header">
                <h2 class="card-title">開發商列表</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EncryptedPassword)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EMail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BanTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ConfirmCode)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EncryptedPassword)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BanTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsConfirmed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConfirmCode)
                            </td>
                            <td>
                                @Html.ActionLink("禁用", "Delete", new { developerId = item.Id, banTime = DateTime.Now }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

</div>


